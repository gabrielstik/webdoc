.cover
  padding-top 15vh
  background-color rgba(0, 0, 0, .5)
  color $white

  &__title
    font-family 'DIN'
    font-size 12em
    text-align center
    text-transform uppercase

  &__text
    width 70%
    margin auto
    margin-top 50px
    font-family 'Averta'
    font-size 2em
    line-height 25px
    text-align center

  &__button
    margin-top 100px
    transition transform .1s ease-out

  &__image
    height 100vh
    width 100vw
    position fixed
    top 0
    left 0
    z-index -10

    img
      height 100%
      width 100%
      object-fit cover

  &__intro
    height 100vh
    overflow hidden

  &__video
    height 100vh
    width 100vw
    position fixed
    top 100vh
    left 0
    overflow hidden

    video
      height 100%
      width 100%
      object-fit cover

  &__hidder
    height 100vh
    width 100vw
    position fixed
    top 100vh
    left 0
    background $backgroundBlack

  &__hidder-2
    height 100vh
    width 100vw
    position fixed
    top 100vh
    left 0
    background $backgroundBlack

  .cover__video--skip
    position absolute
    bottom 20px
    right 20px
    background-color $blue
    font-family 'DIN'
    font-size 3em
    text-transform uppercase
    cursor pointer