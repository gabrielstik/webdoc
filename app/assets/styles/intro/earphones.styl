.earphones
  height 100vh
  padding-top 15vh
  background-color $black
  color $white

  &__title
    font-family 'DIN'
    font-size 80px
    text-align center
    text-transform uppercase

  &__text
    width 600px
    margin 70px auto 0 auto
    font-family 'Averta'
    font-size 25px
    text-align center
    line-height 30px

  &__icon
    margin-top 70px
    text-align center
    height 70px

    img
      height 100%

  &__button
    margin-top 120px