body {
  width 100vw
  height 100vh
  overflow hidden
  font-size 62.5%
}

.blue-button {
  margin-left 50%
  transform translateX(-50%)
  padding 20px 60px
  border-radius 60px
  font-family 'Averta'
  font-weight bold
  font-size 27px
  color $white
  display flex
  background-color $blue
  justify-content center 
  align-items center
  text-transform uppercase
  display inline-block
}