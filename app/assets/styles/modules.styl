body
  width 100vw
  height 100vh
  font-size 62.5%

.blue-button
  margin-left 50%
  transform translateX(-50%)
  padding 22px 60px 18px 60px
  border-radius 60px
  font-family 'Averta'
  font-weight bold
  font-size 27px
  color $white
  display flex
  background-color $blue
  justify-content center 
  align-items center
  text-transform uppercase
  display inline-block

  &:hover
    transform translateX(-50%) scale(1.02)

.o-h
  overflow hidden


.window
  height 100vh