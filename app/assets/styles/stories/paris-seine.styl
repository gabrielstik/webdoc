.paris-seine

  &__media-image
    position relative
    display flex
    align-items center

    &.black
      background-color black

  &__desc
    margin-left 15vw

  &__title
    font-family 'DIN'
    font-weight bold
    font-size 14em
    color $white
    text-transform uppercase
    line-height .9

  &__date
    font-family 'DIN'
    font-weight bold
    font-size 14em
    color $blue
  
  &__text
    width 33vw
    margin-top 50px
    font-family 'Averta'
    font-size 2em
    line-height 1.5
    color $white

    &.grey
      color $mediumGrey

  &__aside-image
    width 40vw
    height 60vh
    position absolute
    top 20vh
    right 0
    overflow hidden

    img
      height 100%
      width 100%
      object-fit cover

  &__interractive-youths
    position relative
    
    img
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      object-fit cover
