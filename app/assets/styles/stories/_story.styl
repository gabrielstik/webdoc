.story
  background $white

  &__doc-title
    padding 60px
    font-family 'Averta'
    font-size 3em
    text-align right
    text-transform lowercase 

  &__thumbnail
    width 90vw
    height calc(100vh - 160px)
    position absolute
    top 160px
    right 0
    background grey
    overflow hidden

    img
      width 100%
      height 100%
      object-fit cover
      object-position top
    
    .hidder
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      background $white
      transform-origin left


  &__intro
    background-color black
    display flex
    align-items center

  &__home-title
    width 300px
    margin-left 15vw
    font-family 'DIN'
    font-size 14em
    color $white
    text-transform uppercase 
    letter-spacing -.05em
    line-height 90%

  &__home-desc
    width 40vw
    font-family 'Averta'
    font-size 2em
    color $white
    line-height 1.8

  &__media-image
    position relative
    display flex
    align-items center

    &.black
      background-color $backgroundBlack

  &__desc
    margin-left 10vw

  &__title
    font-family 'DIN'
    font-weight bold
    font-size 10em
    color $white
    text-transform uppercase
    line-height .9

  &__date
    font-family 'DIN'
    font-weight bold
    font-size 10em
    color $blue
    text-transform uppercase
  
  &__text
    width 33vw
    margin-top 5em
    font-family 'Averta'
    font-size 2em
    line-height 1.5
    color $white

    &.grey
      color $mediumGrey

  &__aside-image
    width 50vw
    height 70vh
    overflow hidden

    &.right
      position absolute
      top 15vh
      right 0

    img
      height 100%
      width 100%
      object-fit contain

  &__media--full-image
    height 100vh
    width 100vw

    img 
      width 100%
      height 100%
      object-fit cover

  &__outro
    background $backgroundBlack
    display flex
    align-items center
    justify-content center
    
    &--title
      font-family 'DIN'
      font-size 10em
      color $white
      text-align center
      text-transform uppercase

    &--themes
      margin-top 70px
      text-align center

    &--theme
      width 300px
      margin auto
      margin-top 10px
      padding 20px 60px 20px 60px
      border solid 2px $white
      display inline-block
      font-family 'DIN'
      font-size 2em
      color $white
      text-align center
      text-transform uppercase
      cursor pointer
      transition: all .1s ease-in-out

      &:hover {
        background: rgba(255,255,255,.2)
      }

.story_aside-imageMusic
  width 50vw
  height 70vh
  right 0
  position absolute
  overflow hidden

.imageMusic__img
  object-fit cover
  height 100%
  width 100%