.map
  height 100vh
  width 100vw
  position fixed
  top 0
  left 0
  background-color $backgroundBlack
  color $white

.infos
  width 480px
  height 100vh
  padding 10vh 50px
  background-color $black
  position fixed
  top 0
  right -100%
  overflow scroll

  &__title
    font-family 'DIN'
    font-size 4em
    text-transform uppercase

  &__themes
    margin-top 50px

  &__theme
    margin-top 1em
    padding 22px 0 18px 0
    border solid 1px $white
    font-family 'Averta'
    font-weight bold
    font-size 2em
    text-align center
    text-transform uppercase
    transition background .2s ease-out
    cursor pointer

    &.selected
      color $black
      background-color $white

  &__text
    margin-top 3em
    font-family 'Averta'
    font-size 2em
    line-height 1.5em

  &__button
    margin-top 3em

  &__FR, &__US
    display none

.mapmonde
  width 1020px
  height 660px
  margin-left 50vw
  transform-origin bottom
  transform translateX(-50%) scale(1.5)

  svg
    width 1020px
    height 660px
    margin-top 50vh
    transform translateY(-50%)

    .land
      fill $lightGrey
      fill-opacity 1
      stroke $darkGrey
      stroke-opacity 1
      stroke-width 0.1

    #US, #FR, #RU, #BR
      transition: fill .5s ease-out
      cursor pointer
    
      &.animate
        animation-name pulse
        animation-duration 1s
        animation-iteration-count infinite
        animation-direction alternate

        @keyframes pulse {
          0% {
            fill: $lightGrey;
          }
          100% {
            fill: #bacdff;
          }
        }

      &.hover 
        fill $blue