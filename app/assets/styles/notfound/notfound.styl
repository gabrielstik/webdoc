.notfound

  &__title
    margin 10vh 15vw
    font-family 'DIN'
    font-size 14em
    color $blue
    text-transform uppercase
    line-height .9

  &__text
    width 40vw
    margin-top 10vh
    margin-left 15vw
    font-family 'Averta'
    font-size 2em
    color $mediumGrey
    line-height 1.4

  &__gohome
    width 50vw
    height 50vw
    padding 15vw
    position fixed
    bottom -25vw
    right -20vw
    background $blue
    border-radius 50%
    font-family 'DIN'
    font-size 4em
    color $white
    text-transform uppercase
    transition transform .1s ease-in-out
    cursor pointer

    &:hover
      transform scale(1.01)