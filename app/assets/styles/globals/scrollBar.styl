.scrollBar
	position fixed
	width 100px
	top 50vh
	left 0
	z-index 10000000000000000

	flex-direction column
	align-items space-between
	transform translateY(-50%)

.scrollBar

	&__bulletPoint
		width 15px
		height 15px

		border 3px solid $mediumGrey
		border-radius 50%
		position absolute
		bottom 0
		
		left 50%
		transform translateX(-50%) translateY(50%)
		cursor pointer
		z-index -1
		pointer-events all
	

	&__bulletPoint--first
		top 0
		transform translateX(-50%) translateY(0%)

	&__bulletPointFill
		width 100%
		height 100%

		border-radius 100%

		transform scale(0)
		background-color $blue

	&__bulletChain
		width 9px
		height 50px

		position absolute
		left 50%
		top 50%

		transform translateX(-50%)
		z-index -1
		pointer-events none

	&__bulletChainFill
		width 100%
		height 100%

		background-color $blue

		transform-origin top
		transform scale(0)

	&__bulletTitle
		position absolute
		top 50%
		left 1em

		font-family 'Averta'
		font-weight bold
		font-size 2em
		color $white
		background-color $blue

		transform translateY(-50%)
		opacity 0
		pointer-events none

