.scrollBar
	position fixed
	display flex
	width 100px
	top 50%

	background-color red

	flex-direction column
	align-items space-between
	transform translateY(-50%)


.scrollBar

	&__bulletPoint
		width 15px
		height 15px

		border 3px solid $black
		border-radius 50%
		position absolute
		bottom 0
		
		left 50%
		transform translateX(-50%) translateY(50%)
		cursor pointer
		z-index -1

	&__bulletPoint--first
		top 0
		transform translateX(-50%) translateY(0%)

	&__bulletPointFill
		width 100%
		height 100%

		border-radius 100%

		transform scale(0)
		background-color orange

	&__bulletChain
		width 6px
		height 50px

		position absolute
		left 50%
		top 50%

		transform translateX(-50%)
		z-index -1

	&__bulletChainFill
		width 100%
		height 100%

		background-color orange

		transform-origin top
		transform scale(0)

