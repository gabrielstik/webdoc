.video
  width 100vw
  height 100vh

.videoPlayer
  position relative
  width 100%
  height 100%

.videoPlayer

  &__video
    width 100%
    height 100%
    object-fit cover
  
  &__timeline
    width 100%
    height 4px
    position absolute
    bottom 0
  
    background-color $grey
    cursor pointer
    transform-origin bottom
  
  &__timelineFill
    width 100%
    height 100%
  
    background-color $blue
  
    transform-origin left
    transform scaleX(0)
  
  // Gradient
  &__gradient
    width 100%
    height 100%
    position absolute
    top 0
  
    background linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.3))
  
    opacity 0
    pointer-events none
    transition opacity 0.3s ease
  
  // Video title
  &__title
    position absolute
    bottom 40px
    left 40px
  
    font-family 'Averta'
    font-size 6em
    font-weight bold
    color $white
  
    opacity 0
    transition opacity 0.3s ease
    user-select none
  
  // Play pause icons
  &__playIcon
    width 0 
    height 0
    position absolute
    left 50%
    top 50%
  
    border-style solid
    border-width 40px 0 40px 50px
    border-color transparent transparent transparent $grey
  
    pointer-events none
    opacity 0
    transform translateX(-40%) translateY(-50%)
    transition opacity 200ms ease
  
  &__pauseIcon
    width 50px
    height 54px
    position absolute
    left 50%
    top 50%
    display flex
    justify-content space-between
  
    pointer-events none
    opacity 0
    transform translateX(-50%) translateY(-50%)
    transition opacity 200ms ease
  
  &__pauseBar
    width 14px
    height 100%
  
    background-color $grey

